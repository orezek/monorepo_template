{
  "name": "@repo/env-config",
  "version": "1.0.0",
  "description": "Utility to import env vars checked by Zod.",
  "license": "MIT",
  "author": "Oldrich Rezek oldrich.rezek@oldrichrezek.com",
  "private": "true",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=24"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "zod": "catalog:",
    "dotenv": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
